<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/single_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/participant" />
    <TextView
        android:id="@+id/single_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/single_checkbox"
        android:text="全部" />
    <EditText
        android:id="@+id/single_edittext"
        android:layout_toRightOf="@id/single_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
